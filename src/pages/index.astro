---
import Selfie from "../assets/selfie.jpeg";
import MailIcon from "../assets/icons/mail.svg";
import ProjectIcon from "../assets/icons/project.svg";
import Layout from "../components/Layout.astro";
import Button from "../components/Button.astro";
import ContactOverlay from "../components/ContactOverlay.astro";
import CircleText from "../components/CircleText.astro";
import ProjectsOverlay from "../projects/ProjectsOverlay";
---

<Layout>
    <div class="page">
        <div class="row header">
            <div class="content">
                <h1 class="title">Hey, I'm Owen ðŸ‘‹</h1>
                <div class="subtitle">
                    Junior designer curious about creative experiences and helpful products &mdash;
                    Based in Vancouver &mdash;
                    Studying at UBC &mdash;
                    Available for intership
                </div>

                <!-- ? -->
            </div>

            <div class="side-col">
                <div class="selfie">
                    <img src={Selfie.src} alt="James Baxster" />
                </div>
            </div>
        </div>

        <div class="row about">
            <div class="content">
                <div class="about-message">
                    I'm a User Experience Designer studying at the University of
                    British Columbia (graduating 2026). I enjoy creating
                    engaging visuals and bringing products to life. I am
                    passionate about the environment, table tennis, fresh
                    blackberries, and helping make the world a better place.
                </div>
            </div>
            <div class="side-col button-group">
                <Button
                    id="projects-button"
                    icon={ProjectIcon.src}
                    label="Projects"
                />
                <Button
                    id="contact-button"
                    icon={MailIcon.src}
                    label="Contact"
                />
            </div>
        </div>
        <div class="copyright">
            &copy; James Baxster<br />
            Last updated Sept 2024
        </div>
    </div>

    <CircleText />

    <ContactOverlay />
    <ProjectsOverlay client:only />
</Layout>

<style>
    body {
        background-color: var(--light);
    }

    .page {
        padding: 32px;
    }

    h1 {
        font-size: 78px;
        color: var(--primary);
    }

    .selfie {
        margin-left: -32px;
        margin-right: -32px;
        margin-top: -84px;
        position: relative;
        z-index: -1;
        margin-bottom: 24px;
    }
    .selfie img {
        width: 100%;
    }

    .subtitle {
        font-size: 24px;
        line-height: 2;
    }

    .button-group {
        display: flex;
        flex-direction: column;
        gap: 24px;
        padding-top: 32px;
        padding-bottom: 32px;
    }

    .about-message,
    .copyright {
        line-height: 2;
    }

    .copyright {
        opacity: 0.6;
    }

    @media (min-width: 600px) {
        .page {
            width: 100vw;
            height: 100vh;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            padding: 64px;
        }

        .row {
            display: flex;
            flex-direction: row;
        }
        .content {
            flex: 2;
        }

        .side-col {
            flex: 1;
            max-width: 600px;
        }

        .row.header {
            flex: 3;
            margin-bottom: 24px;
        }
        .row.about {
            flex: 1;
        }
        

        .selfie {
            margin: 0;
            width: 100%;
            height: 100%;
        }
        .selfie img {
            border-width: 1px;
            border-style: solid;
            border-color: var(--dark);
            border-radius: 32px;
            width: 100%;
            height: 100%;
            object-fit: cover;
            max-height: 65vh;
        }

        .button-group {
            padding: 0;
        }

        .subtitle {
            margin-right: 64px;
            max-width: 800px;
        }

        .about .content {
            display: flex;
            justify-content: flex-end;
            align-items: flex-end;
        }

        .about-message {
            text-align: right;
            margin-right: 60px;
            align-items: center;
            max-width: 500px;
        }
    }

</style>

<script>
    const contactButton = document.getElementById("contact-button");
    const contactOverlay = document.getElementById("contact-overlay");

    contactButton.addEventListener("click", () => {
        if (contactOverlay.hasAttribute("data-active")) {
            contactOverlay.removeAttribute("data-active");
        } else {
            contactOverlay.setAttribute("data-active", "active");
        }
    });
</script>
